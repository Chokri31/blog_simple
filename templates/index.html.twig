{% extends "base.html.twig" %}

{% block title %}Accueil{% endblock %}

{% block body %}
<body>
    <nav class="navbar navbar-expand-md navbar-dark bg-dark fixed-top">
      <a class="navbar-brand" href="{{ path('home') }}">Navbar</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span></button>

    <div class="collapse navbar-collapse" id="navbarsExampleDefault">
      <ul class="navbar-nav mr-auto">
        <li class="nav-item active">
          <a class="nav-link" href="{{ path('home') }}">Accueil <span class="sr-only">(current)</span></a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href="{{ path('article_new') }}">Ajouter un article</a>
        </li>
        <li class="nav-item">
          <a class="nav-link disabled" href="#" tabindex="-1" aria-disabled="true">Disabled</a>
        </li>
      </ul>
        <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-secondary my-2 my-sm-0" type="submit">Search</button>
        </form>
    </div>
    </nav>

<main role="main">


  <div class="album py-5 bg-light">
    <div class="container container-fluid">

      <div class="row">
    {% for article in articles %}

        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
            <img src="{{ article.image }}" alt="{{ article.image }}">
            <div class="card-body">
              <p class="card-text">{{ article.description|slice(0, 50) }}...</p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <a href="{{ path('article_show', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary" data-toggle="tooltip" data-placement="bottom" title="Voir">Voir</a>
                  <a href="{{ path('article_edit', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary" data-toggle="tooltip" data-placement="bottom" title="Editer">Editer</a>
                  <a href="{{ path('article_delete', {"id": article.id}) }}" class="btn btn-sm btn-outline-secondary" onclick="return confirm('Attention ce ci va supprimer l\'article selectionnez')" data-toggle="tooltip" data-placement="bottom" title="Supprimer">Supprimer</a>

                </div>
                <small class="text-muted">{{ article.createdAt|date("d/m/Y") }}</small>
              </div>
            </div>
          </div>
        </div>
    {% endfor %}
        </div>
    </div>
  </div>


</main><!-- /.container -->


<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
